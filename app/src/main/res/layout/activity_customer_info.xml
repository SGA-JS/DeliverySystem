<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Customer Information Details -->

    <TextView
        android:id="@+id/textViewinfo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Information"
        android:textSize="50dp"
        android:textStyle="bold" />

    <!-- Horizontal LinearLayout for Icons -->

    <androidx.cardview.widget.CardView
        android:layout_width="381dp"
        android:layout_height="365dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="361dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewDoNo"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewCustomerName"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewCustomerPhone"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewCustomerAddress"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Camera Icon -->

        <!-- Start Button -->
        <ImageView
            android:id="@+id/btnCamera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Camera Icon"
            android:onClick="btnCameraClicked"
            android:src="@drawable/ic_menu_camera"
            android:tint="@color/purple_500" />

        <Button
            android:id="@+id/statusButton"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:contentDescription="Status Button"
            android:onClick="btnStatusClicked" />

        <!-- Map Icon -->
        <ImageView
            android:id="@+id/btnGps"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:contentDescription="Map Icon"
            android:onClick="btnGpsClicked"
            android:src="@drawable/ic_map"
            android:tint="@color/purple_500" />
    </LinearLayout>

</LinearLayout>
