<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Customer Information Details -->

    <TextView
        android:id="@+id/textViewinfo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Information"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Horizontal LinearLayout for Icons -->

    <androidx.cardview.widget.CardView
        android:layout_width="381dp"
        android:layout_height="365dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="361dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewOrderNumber"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="2309-abc123" />

            <TextView
                android:id="@+id/viewCustomerName"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="JiaFoo" />

            <TextView
                android:id="@+id/viewCustomerPhone"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="89089677" />

            <TextView
                android:id="@+id/viewCustomerAddress"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="123,jurong west 93,68888" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Camera Icon -->
        <ImageView
            android:id="@+id/imageViewCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Camera Icon"
            android:src="@drawable/ic_menu_camera" />

        <!-- Start Button -->
        <Button
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Start" />

        <!-- Map Icon -->
        <ImageView
            android:id="@+id/imageViewMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:contentDescription="Map Icon"
            android:src="@drawable/ic_map" />
    </LinearLayout>

</LinearLayout>
